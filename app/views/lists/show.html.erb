<h2><%= @list.name %></h2>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li><%= "#{bookmark.movie.title}" %></li>
    <li><%= "#{bookmark.movie.overview}" %></li>
    <li><%= "#{bookmark.movie.rating}" %></li>
    <li><%= "#{bookmark.comment}" %></li>
    <%= link_to "Delete", bookmark_path(bookmark.id), method: :delete, data: { confirm: "Are you sure?" } %>
  <% end %>
</ul>

<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>

